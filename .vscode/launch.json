{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/linux/x86_64/debug/satnet",
            "args": [
                "${workspaceFolder}/configs/ng-full-starlink_group5-Jan.json",
                "1000"
            ],
     
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        
        {
            "type": "xmake",
            "request": "launch",
            "name": "Debug XMake target",
            "target": "satnet",
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "args" : [
                "configs/ng-full-starlink_group5-Jan.json",
                "1000"
            ]
            
        }
    ]
}